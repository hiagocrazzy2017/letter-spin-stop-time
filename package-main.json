  "description": "PulseStop - Jogo de Adedonha Online Multiplayer com Node.js e Socket.IO",
  "main": "server.cjs",
  "scripts": {
    "start": "node server.cjs",
    "build": "npm ci && npm run build:frontend && npm run setup:server",
    "build:frontend": "vite build",
    "setup:server": "cp package-server.json package.json && npm install --production",
    "dev": "concurrently \"vite\" \"nodemon server.cjs\"",
    "dev:frontend": "vite",
    "dev:server": "nodemon server.cjs",
    "preview": "vite preview"
  },
